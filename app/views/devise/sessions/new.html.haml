.row.height-100
  / Column for image side of login
  .col.s1.l4.height-100.valign-wrapper.green.lighten-2.hide-on-med-and-down
    .container
      .center-align
        = image_tag("icons.png", size: "400x400", :alt => "Image")
  / Column for right side of login
  .col.s12.m8.height-100
    .height-25.hide-on-med-and-down
    .col.s12.l5.offset-l3
      - if alert
        .alert-box.pa-4.dark
          = alert
      %h3
        Registrer deg!
      %p
        Registrer deg n책 for 책 f책 alt ut av Signlett.
        Du kan se egne signeringer og se signering andre har sendt til deg!
    / Column for tabs and forms
    .col.m12.l5.offset-l3
      %ul.tabs
        %li.tab.col
          %a{:href => "#login"}
            Logg inn
        %li.tab.col.indigo-text
          %a{:href => "#signup"}
            Registrer deg
      / Login form
      #login.section
        =form_tag session_path(:user) do
          = text_field_tag 'user[email]', "", placeholder: "E-post"
          = password_field_tag 'user[password]', "", placeholder: "Passord"
          %button.btn-flat.white-text.green.lighten-2 Logg inn
          / Modal Trigger
          %br
          %a.waves-effect.waves-light.modal-trigger{:href => "#forgotten_password_modal"} Glemt passordet?
          %br
          %a.waves-effect.waves-light.modal-trigger{:href => "#reset_confirmation_modal"} Send ny bekreftelse

      / Signup form
      #signup.section
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .input-field
            = f.text_field :first_name, placeholder: "Fornavn"
            %i.material-icons.prefix
              mode_edit
          .input-field
            = f.text_field :last_name, placeholder: "Etternavn"
          .input-field
            = f.email_field :email, placeholder: "E-post", class: "validate"
            %span.helper-text{"data-error" => "Fyll inn en gyldig e-post adresse", "data-success" => "Riktig!"}
          .input-field
            = f.password_field :password, placeholder: "Passord"
          .input-field
            = f.password_field :password_confirmation, placeholder: "Bekreft passord"
          .input-field
            = f.submit "Registrer deg", class: "btn-flat green lighten-2 white-text "
      / Modal Structure
      #forgotten_password_modal.modal
        .modal-content
          %h3 Glemt passordet?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .input-field
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-post"
            .modal-footer
              %a.modal-close.red-text.btn-flat{:href => "#!"} Avbryt
              = f.submit "Tilbakestill passord", class: "blue-text btn-flat"
      #reset_confirmation_modal.modal
        .modal-content
          %h3 Resend confirmation instructions
          = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
            .actions
            .modal-footer
              %a.modal-close.red-text.btn-flat{:href => "#!"} Avbryt
              = f.submit "Send bekreftelse p책 nytt", class: "blue-text btn-flat"



